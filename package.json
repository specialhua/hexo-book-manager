{
  "name": "hexo-book-manager",
  "private": true,
  "version": "1.0.5",
  "description": "书籍管理工具 - 为 Hexo 博客生成书单页面",
  "author": "Specialhua <inkcodes.com>",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "vite --mode electron",
    "build": "vite build --mode electron && electron-builder --publish always",
    "build:dir": "vite build && electron-builder --dir",
    "build:electron": "tsc -p electron && node scripts/build-cjs.cjs && vite build --mode electron",
    "type-check": "tsc --noEmit --skipLibCheck",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:1420 && NODE_ENV=development electron .\"",
    "dist": "npm run build"
  },
  "dependencies": {
    "core-util-is": "^1.0.3",
    "crypto-js": "^4.2.0",
    "naive-ui": "^2.35.0",
    "node-fetch": "^3.3.2",
    "picgo": "^1.5.9",
    "vue": "^3.3.11",
    "vue-draggable-next": "^2.2.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "concurrently": "^8.2.2",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "typescript": "^5.2.2",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^1.8.25",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.example.book-manager",
    "productName": "HexoBookManager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "specialhua",
        "repo": "hexo-book-manager"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility"
    }
  }
}
